@model RegisterDto
<div class="container mt-5 pt-5">
    <div class="text-center">
        <main class="main-content justify-content-center">
            <div class="breadcrumb-area breadcrumb-height">
                <div class="container h-100">
                    <div class="row h-100">
                        <div class="col-lg-12">
                            <div class="breadcrumb-item">
                                <h2 class="breadcrumb-heading">Login & Register Page</h2>
                                <ul>
                                    <li>
                                        <a asp-action="index" asp-controller="Home">Home  |</a>
                                        <a asp-action="Login" asp-controller="Account">Login</a>

                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="login-register-area section-space-y-axis-100">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <form method="post">
                                <div class="login-form">
                                    <h4 class="login-title">Register</h4>
                                    <div>
                                        <div data-mdb-input-init class="form-outline">
                                            <label class="form-label" asp-for="Name">First Name</label>
                                            <input asp-for="Name" placeholder="First Name" class="form-control" />
                                            <span asp-validation-for="Name" style="color:red"></span>
                                        </div>
                                        <div data-mdb-input-init class="form-outline">
                                            <label class="form-label" asp-for="Surname">Last Name</label>
                                            <input asp-for="Surname" placeholder="Last Name" class="form-control" />
                                            <span asp-validation-for="Surname" style="color:red"></span>
                                        </div>
                                        <div data-mdb-input-init class="form-outline">
                                            <label class="form-label" asp-for="UserName">UserName</label>
                                            <input asp-for="UserName" placeholder="UserName" class="form-control"  />
                                            <span asp-validation-for="UserName" style="color:red"></span>
                                        </div>
                                        <div data-mdb-input-init class="form-outline">
                                            <label class="form-label" asp-for="Email">Email Address*</label>
                                            <input asp-for="Email" placeholder="Email Address" class="form-control" />
                                            <span asp-validation-for="Email" style="color:red"></span>
                                        </div>
                                        <div data-mdb-input-init class="form-outline">
                                            <label class="form-label" asp-for="Password">Password</label>
                                            <input asp-for="Password" placeholder="Password" class="form-control" />
                                            <span asp-validation-for="Password" style="color:red"></span>
                                        </div>
                                        <div data-mdb-input-init class="form-outline">
                                            <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                                            <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                                            <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                                        </div>
                                        <div asp-validation-summary=All>
                                        </div>
                                        <div class="col-12">
                                            <button class="btn btn-primary">
                                                Register
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
</div>
</div>